<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.media.MediaView?>

<BorderPane minHeight="500.0" minWidth="500.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.MediaController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#openDirectory" text="Open Media Folder" />
              <MenuItem mnemonicParsing="false" onAction="#exit" text="Exit" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Control">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#slow" text="Slow" />
              <MenuItem mnemonicParsing="false" onAction="#play" text="Play" />
                  <MenuItem mnemonicParsing="false" onAction="#pause" text="Pause" />
                  <MenuItem mnemonicParsing="false" onAction="#stop" text="Stop" />
                  <MenuItem mnemonicParsing="false" onAction="#fastForward" text="Fast Forward" />
                  <RadioMenuItem fx:id="repeatMenuOpt" mnemonicParsing="false" onAction="#repeat" text="Repeat" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Playlist">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#showPlayList" text="Open" />
                  <MenuItem mnemonicParsing="false" onAction="#hidePlayList" text="Close" />
              </items>
            </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem fx:id="aboutButton" mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <MediaView fx:id="mView" blendMode="SCREEN" fitHeight="400.0" fitWidth="400.0" BorderPane.alignment="CENTER" />
   </center>
   <bottom>
      <GridPane BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Slider fx:id="timeSlider" />
            <ButtonBar buttonMinWidth="60.0" GridPane.rowIndex="1">
               <buttons>
                  <Button mnemonicParsing="false" onAction="#slow" text="Slow" />
                  <Button mnemonicParsing="false" onAction="#play" text="Play" />
                  <Button mnemonicParsing="false" onAction="#pause" text="Pause" />
                  <Button minWidth="30.0" mnemonicParsing="false" onAction="#stop" text="Stop" />
                  <Button minWidth="30.0" mnemonicParsing="false" onAction="#fastForward" prefHeight="25.0" text="Fast" />
                  <Slider fx:id="volumeSlider" prefHeight="15.0" />
               </buttons>
            </ButtonBar>
         </children>
      </GridPane>
   </bottom>
   <left>
      <ListView fx:id="playlistList" onEditStart="#listSelection" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </left>
</BorderPane>
